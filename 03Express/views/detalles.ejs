<%- include("templates/cabecera", {subtitulo: 'Detalles del Pokemon' }) %>
    <div class="container">
        <% if (error) { %>
            <%= mensaje %> 
            <a 
                href="/pokemon"
                class="btn btn-dark btn-block my-2"
            >
                Volver
            </a>
        <% } %>
        <% if (!error) { %>
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Acción</th>
                    </tr>
                </thead>
                
                <tbody>
                    <tr>
                        <th scope="row"><%= pokemon.id %></th>
                        <td><%= pokemon.nombre %> </td>
                        <td><%= pokemon.tipo %> </td>
                        <td><%= pokemon.descripcion %></td>
                        <td>
                            <button class="btn btn-danger btn-sm" data-id="<%= pokemon.id %>">
                            Eliminar
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
<% } %>

    </div>
<%- include("templates/footer") %>